        "    df[\"I_low\"]  = (df[\"dose\"] == \"low\").astype(int)\n",
        "    df[\"I_high\"] = (df[\"dose\"] == \"high\").astype(int)\n",
        "\n",
        "    # -------------------------------------------------\n",
        "    # 5. Assemble output\n",
        "    # -------------------------------------------------\n",
        "    data = {\n",
        "        \"bins\": bins,     # required discretisation\n",
        "        \"df_long\": df     # feature set for time-varying features\n",
        "    }\n",
        "\n",
        "    return data\n"
